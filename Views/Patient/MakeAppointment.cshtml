@model Dictionary<int, List<AppointmentModel>>
<!DOCTYPE html>
<html>
<head>
    <title> Make an Appointment </title>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    @Styles.Render("~/Content/custom/make-appointment.css")
    @Styles.Render("~/Content/custom/home.css")
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    @Scripts.Render("~/Scripts/custom/make-appointment.js")
</head>
<body>
    <nav>
        <div class="header">
            <h2 class="logo">Healthcare System</h2>
            <input type="checkbox" id="chk">
            <label for="chk" class="show-menu-btn">
                <i class="fas fa-ellipsis-h"></i>
            </label>

            <div class="menu">

                <a href="@Url.Action("Index","Home")">Home</a>
                <a href="@Url.Action("About","Home")">About</a>
                <a href="#">Services</a>
                <a href="#">Contact</a>
                <a href="@Url.Action("Index","Account")">Account</a>

                <label for="chk" class="hide-menu-btn">
                    <i class="fas fa-times"></i>
                </label>

            </div>
        </div>
    </nav>
    <h1 class="blue" style="clear: both;">Make an Appointment</h1>
    <div class="datepicker">
        <h1> Pick a Date</h1>
        <input id="datepicker" type="date">
        <br /><br />
    </div>

    <table class="container">
        <thead>
            <tr>
                <th><h1>Time</h1></th>
                <th><h1>Doctor</h1></th>
                <th><h1>Action</h1></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hourSlot in Model)
            {
                @Html.Partial("_AppointmentRow", hourSlot.Value)
            }
        </tbody>
    </table>
</body>
</html>