<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Healthcare System</title>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    @Styles.Render("~/Content/custom/home.css")
    <link rel="icon" href="~/Content/image/logo.png">
</head>
<body style="background: white;">
    @Html.Partial("~/Views/Shared/_NavigationBar.cshtml")
    <div style="overflow: visible; width: 65%; height: 50%; float: right; margin-right: 20%;">
        <img id="rightLogo" src="~/Content/image/welcome-logo.png">
        <h1>Welcome @ViewBag.FirstName @ViewBag.LastName! @Session["AccountId"] </h1>
    </div>
    @{ var patientId = Convert.ToInt32(Session["AccountId"]);}
    <a href="@Url.Action("MakeAppointment","Patient")"><img style="width:40%; height: 100%; margin-left: 6%;" src="~/Content/image/appointment.jpg"></a>
    <a href="@Url.Action("AppointmentList","Patient", new { patientId })"><img style="width:40%; height: 100%; margin-left: 6%;" src="~/Content/image/list.jpg"></a>
    <br><br>
    <a href="@Url.Action("Index","Account")"><img style="width:40%; height: 100%; margin-left: 6%;" src="~/Content/image/profile.jpg"></a>
    <a href="@Url.Action("MedicalRecord","Patient", new { patientId })"><img style="width:40%; height: 100%; margin-left: 6%;" src="~/Content/image/history.png"></a>

</body>
</html>