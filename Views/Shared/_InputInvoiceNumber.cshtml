
<div class="modal fade" id="invoiceModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Input Invoice Number to View and Pay</h3>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label col-sm-3" for="Salary">Invoice #</label>
                    <div class=" col-sm-6">
                        <input class="form-control" id="InvoiceNumber" type="text" value="">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="submit-btn" type="submit" class="btn btn-primary">Enter</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $("#pay-invoice-link").click(function () {
            $("#invoiceModal").modal('toggle');
        });
    });
</script>

