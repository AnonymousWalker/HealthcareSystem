@model DoctorSalary
<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            @using (Html.BeginForm("EditSalary", "Staff", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title">Edit Salary of Dr. @Model.DoctorName</h3>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(x => x.DoctorId, Model.DoctorId)
                    <div class="form-group">
                        @Html.LabelFor(x => x.Salary, new { @class = "control-label col-sm-3" })
                        <div class=" col-sm-6">
                            @Html.TextBoxFor(x => x.Salary, new { @class = "form-control", type = "number", required = "required"})
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="submit-btn" type="submit" class="btn btn-primary">Confirm</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            }
        </div>

    </div>
</div>
