@model ProfileModel
<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            @using (Html.BeginForm("EditPatientProfile", "Account", FormMethod.Post, new { @class = "form-horizontal", id= "edit-form" }))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title">Edit Profile</h3>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(x=>x.AccountId, Model.AccountId)
                    <div class="form-group">
                        @Html.LabelFor(x => x.Email, new { @class = "control-label col-sm-4" })
                        <div class=" col-sm-6">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", disabled = "true" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password, new { @class = "control-label col-sm-4" })
                        <div class=" col-sm-6">
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password", required = "required" })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Firstname,"First Name", new { @class = "control-label col-sm-4" })
                        <div class=" col-sm-6">
                            @Html.TextBoxFor(x => x.Firstname, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(x => x.Firstname)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Lastname, "Last Name", new { @class = "control-label col-sm-4" })
                        <div class=" col-sm-6">
                            @Html.TextBoxFor(x => x.Lastname, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(x => x.Lastname)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Phone, "Phone", new { @class = "control-label col-sm-4" })
                        <div class=" col-sm-6">
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.BillingAddress, "Billing Address", new { @class = "control-label col-sm-4" })
                        <div class=" col-sm-6">
                            @Html.TextBoxFor(x => x.BillingAddress, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.InsuranceNumber, "Insurance Number", new { @class = "control-label col-sm-4" })
                        <div class=" col-sm-6">
                            @Html.TextBoxFor(x => x.InsuranceNumber, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            }
        </div>

    </div>
</div>